<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Data</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }
        .pagination a, .pagination span {
            padding: 8px 12px;
            border: 1px solid #ddd;
            margin: 0 5px;
            text-decoration: none;
            color: #333;
            border-radius: 5px;
            background-color: #f4f4f4;
        }
        .pagination a:hover {
            background-color: #ddd;
        }
        .pagination a.active {
            background-color: #4CAF50;
            color: white;
            border-color: #4CAF50;
        }
        .pagination input {
            width: 40px;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 0 5px;
            text-align: center;
        }
        .pagination button {
            padding: 8px 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 5px;
        }
        .pagination button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <nav>
        <div class="navbar-logo">My App</div>
        <div class="navbar-links">
            <a href="/" class="active">Home</a>
            <a href="/display">Videos</a>
            <a href="/playlists">Playlists</a>
            <a href="/dhun-dashboard">Dhun Dashboard</a>
            <a href="/upload" class="upload-btn">Upload Data</a>
            <a href="/video-filters">Video Filters</a> </div>
    </nav>

    <div class="container">
        <h2>Video Records</h2>

        <div class="actions">
            <a href="/export" class="export-btn">ðŸ“¤ Export to Excel</a>
        </div>
        
        <label for="recordsPerPage">Records per page:</label>
        <select id="recordsPerPage" onchange="changeLimit()">
            <option value="10" <% if (limit == 10) { %> selected <% } %>>10</option>
            <option value="25" <% if (limit == 25) { %> selected <% } %>>25</option>
            <option value="50" <% if (limit == 50) { %> selected <% } %>>50</option>
            <option value="100" <% if (limit == 100) { %> selected <% } %>>100</option>
            <option value="all" <% if (limit == 'all') { %> selected <% } %>>All</option>
        </select>
        
        <table>
            <thead>
                <tr>
                    <th>Video ID</th>
                    <th>Title</th>
                    <th>Channel</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Orator</th>
                    <th>Sabha Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (videos.length > 0) { %>
                    <% videos.forEach(video => { %>
                        <tr>
                            <td><%= video.video_id %></td>
                            <td><%= video.video_title %></td>
                            <td><%= video.channel_id || 'N/A' %></td>
                            <td><%= video.type_name %></td>
                            <td><%= video.category_name %></td>
                            <td><%= video.orator || 'N/A' %></td>
                            <td><%= video.sabha_number || 'N/A' %></td>
                            <td>
                                 <a href="/edit/<%= video.video_id %>" class="edit-btn">Edit</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="8">No videos found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/display?page=1&limit=<%= limit %>">First</a>
                <a href="/display?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
            <% } %>

            <span class="current">Page <%= currentPage %> of <%= totalPages %></span>

            <% if (currentPage < totalPages) { %>
                <a href="/display?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
                <a href="/display?page=<%= totalPages %>&limit=<%= limit %>">Last</a>
            <% } %>
             <input type="number" id="pageInput" placeholder="Page">
            <button onclick="goToPage()">Go</button>
        </div>
    </div>

    <script>
        function changeLimit() {
            const limit = document.getElementById('recordsPerPage').value;
            window.location.href = `/display?page=1&limit=${limit}`;
        }
        function goToPage() {
            const page = document.getElementById('pageInput').value;
             const limit = document.getElementById('recordsPerPage').value;
            if (page >= 1 && page <= <%= totalPages %>) {
                window.location.href = `/display?page=${page}&limit=${limit}`;
            } else {
                alert('Invalid page number');
                console.log("Invalid page number:", page); // ADDED CONSOLE LOG
            }
        }
    </script>
</body>
</html>
